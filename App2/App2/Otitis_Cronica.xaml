        <StackLayout>
            <Label Text="Otitis externa crónica:"
                   FontSize="Large"
                   FontAttributes="Bold"
                   VerticalOptions="Start" 
                   HorizontalOptions="Start" 
            />
            <Label Text="-Fiebre"
                   FontSize="Medium"
                   VerticalOptions="StartAndExpand" 
                   HorizontalOptions="Start" 
            />
            <Label Text="-Celulitis facial o cervical"
                   FontSize="Medium"
                   VerticalOptions="StartAndExpand" 
                   HorizontalOptions="Start" 
            />
            <Label Text="-Diabetes"
                   FontSize="Medium"
                   VerticalOptions="StartAndExpand" 
                   HorizontalOptions="Start" 
            />
